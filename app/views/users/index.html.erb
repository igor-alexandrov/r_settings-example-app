<h1 class="b-h1">Users</h1>

<% @users.each do |user| %>
    <div class="b-user">
      <div class="b-user_attribute">
        <span class="b-user_attribute__title">Login</span>
        <span class="b-user_attribute__value"><%= link_to user.login, user_path(user.login) %></span>
      </div>
      <div class="b-user_attribute">
        <span class="b-user_attribute__title">Short name</span>
        <span class="b-user_attribute__value"><%= user.short_name %></span>
      </div>

      <h2 class="b-h2">Settings for this user</h2>
      <h3 class="b-h3"><%= link_to "add new", new_user_setting_path(user) %></h3>
      <table>
        <thead>
        <tr>
          <th>key</th>
          <th>
            value
            <small>(This is a DB value)</small>
          </th>
          <th>data_type</th>
          <th>description</th>
          <th>actions</th>
        </tr>
        </thead>
        <tbody>
        <% user.r_settings.each do |setting| %>
            <tr>
              <td><%= link_to setting.key, user_setting_path(user, setting) %></td>
              <td><%= setting.value %></td>

              <td><%= setting.data_type %></td>
              <td><%= setting.description %></td>
              <td>

                <%= link_to "edit", edit_user_setting_path(user, setting) %>
                <%= link_to 'destroy', user_setting_path(user, setting), :confirm => 'Are you sure?', :method => :delete %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
<% end %>



